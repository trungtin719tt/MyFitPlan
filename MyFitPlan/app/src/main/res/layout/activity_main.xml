<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Content -->
    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimary"
            style="@style/MyTheme"
            android:theme="@style/AppTheme.AppBarOverlay" />

        <!-- Main Home -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/exclamation"
                    />
                <TextView
                    android:id="@+id/alert_message"
                    android:layout_width="300dp"
                    android:layout_marginLeft="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/alertColor"
                    android:textSize="30dp"
                    android:text="Chú ý ăn uống! "/>
            </RelativeLayout>
            <TextView
                android:id="@+id/home_notification"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Biểu đồ dinh dưỡng trong ngày"
                android:textSize="25sp"/>

            <!-- progress calories -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Calories"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_progress_calo"
                        android:layout_width="250dp"
                        android:layout_height="20dp"
                        android:text="2600/3250"
                        android:gravity="center"/>
                    <ProgressBar
                        android:progressDrawable="@drawable/progess_bar"
                        android:id="@+id/progress_calo"
                        android:layout_width="280dp"
                        android:layout_height="30dp"
                        android:progress="2600"
                        android:max="3250"
                        style="@android:style/Widget.ProgressBar.Horizontal"


                        />

                </LinearLayout>


            </LinearLayout>

            <!-- progress protein -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Protein"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_progress_protein"
                        android:layout_width="280dp"
                        android:layout_height="20dp"
                        android:text="65/200"
                        android:gravity="center"/>
                    <ProgressBar
                        android:progressDrawable="@drawable/progess_bar"
                        android:id="@+id/progress_protein"
                        android:layout_width="280dp"
                        android:layout_height="30dp"
                        android:secondaryProgress="60"
                        android:max="200"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        />

                </LinearLayout>


            </LinearLayout>

            <!-- progress carbohydrat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Tinh bột"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_progress_carb"
                        android:layout_width="280dp"
                        android:layout_height="20dp"
                        android:text="150/325"
                        android:gravity="center"/>
                    <ProgressBar
                        android:progressDrawable="@drawable/progess_bar"
                        android:id="@+id/progress_carb"
                        android:layout_width="280dp"
                        android:layout_height="30dp"
                        android:secondaryProgress="150"
                        android:max="325"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        />

                </LinearLayout>


            </LinearLayout>
            <!-- progress fat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Chất béo"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_progress_fat"
                        android:layout_width="280dp"
                        android:layout_height="20dp"
                        android:text="23/150"
                        android:gravity="center"/>
                    <ProgressBar
                        android:progressDrawable="@drawable/progess_bar"
                        android:id="@+id/progress_fat"
                        android:layout_width="280dp"
                        android:layout_height="30dp"
                        android:secondaryProgress="23"
                        android:max="150"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        />

                </LinearLayout>


            </LinearLayout>

            <!-- progress water -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Nước"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_progress_nuoc"
                        android:layout_width="280dp"
                        android:layout_height="20dp"
                        android:text="2222/2500ml"
                        android:gravity="center"/>
                    <ProgressBar
                        android:progressDrawable="@drawable/progess_bar"
                        android:id="@+id/progress_nuoc"
                        android:layout_width="280dp"
                        android:layout_height="30dp"
                        android:progress="2222"
                        android:max="3250"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Navigation Menu -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#ffccbc"
                android:paddingLeft="16dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/nav_header_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/camera"/>
                <TextView
                    android:id="@+id/nav_header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Việt Cường"
                    android:textColor="#000000"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/nav_header_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cuongnv230796@gmail.com"
                    android:textColor="#000000"/>

            </LinearLayout>

            <!-- Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/whiteText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="25dp">
                        <ImageView
                            android:id="@+id/nav_content_home"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_home"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Trang chủ"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="25dp">
                        <ImageView
                            android:id="@+id/nav_content_diary"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_diary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Nhật ký"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="25dp">
                        <ImageView
                            android:id="@+id/nav_content_library"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_library"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Thư viện"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="25dp">
                        <ImageView
                            android:id="@+id/nav_content_goal"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_goal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Mục tiêu"/>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="25dp">
                        <ImageView
                            android:id="@+id/nav_content_setting"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_setting"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Cài đặt"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="25dp">
                        <ImageView
                            android:id="@+id/nav_content_log_out"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_logout"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Đăng xuất"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </android.support.design.widget.NavigationView>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="info.androidhive.bottomnavigation.MainActivity">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:itemBackground="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackground"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/navigation" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:src="@drawable/plus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="auto"
            android:layout_gravity="bottom|end"
            android:onClick="clickToEat"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="40dp"
            app:backgroundTint="@color/colorPrimary"
            />

    </android.support.design.widget.CoordinatorLayout>




</android.support.v4.widget.DrawerLayout>