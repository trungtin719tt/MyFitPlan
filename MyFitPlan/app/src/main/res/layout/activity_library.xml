<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true">

<!-- Content -->
<LinearLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <!-- Toolbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        style="@style/MyTheme"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <!-- Main Home -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Search box -->
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/txt_library_search"
                    android:layout_width="210dp"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_search"/>
            </LinearLayout>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:background="@drawable/border"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_library_name"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="Cơm tấm Cali"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="(10 fats, 15 carbs, 20 proteins)"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/txt_library_count"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="50"/>
                            <TextView
                                android:paddingLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="người đã thêm món ăn."/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/txt_library_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="600"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="kcl"/>
                        </LinearLayout>
                        <!-- Button -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:gravity="right">
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_food"
                                android:layout_marginRight="10dp"/>
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_plus"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>

<!-- Navigation Menu -->
<android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#ffccbc"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/nav_header_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/camera"/>
            <TextView
                android:id="@+id/nav_header_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Việt Cường"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/nav_header_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cuongnv230796@gmail.com"
                android:textColor="#000000"/>

        </LinearLayout>

        <!-- Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/whiteText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">
                    <ImageView
                        android:id="@+id/nav_content_home"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_home"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Trang chủ"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">
                    <ImageView
                        android:id="@+id/nav_content_diary"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_diary"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Nhật ký"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">
                    <ImageView
                        android:id="@+id/nav_content_library"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_library"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Thư viện"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">
                    <ImageView
                        android:id="@+id/nav_content_goal"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_goal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Mục tiêu"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">
                    <ImageView
                        android:id="@+id/nav_content_setting"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_setting"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Cài đặt"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">
                    <ImageView
                        android:id="@+id/nav_content_log_out"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_logout"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Đăng xuất"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>